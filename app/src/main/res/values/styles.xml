<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowAnimationStyle">@style/default_animation</item>
    </style>

    <!-- 默认Activity跳转动画 -->
    <style name="default_animation" mce_bogus="1" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/activity_up_in</item>
        <item name="android:activityOpenExitAnimation">@anim/activity_up_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/activity_down_in</item>
        <item name="android:activityCloseExitAnimation">@anim/activity_down_out</item>
    </style>

    <style name="FullScreenTheme" parent="AppTheme">
        <item name="android:background">@null</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="RankTopTvStyle">
        <item name="android:textSize">@dimen/sp15</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="userClassifyStyle">
        <item name="android:textSize">@dimen/sp14</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/userinfo_classify_title</item>
        <item name="android:layout_marginTop">@dimen/dp20</item>
    </style>

    <style name="userContentStyle">
        <item name="android:textSize">@dimen/sp16</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/userinfo_content</item>
        <item name="android:layout_marginTop">@dimen/dp14</item>
    </style>



    <style name="RankRadioButtonStyle">
        <item name="android:textSize">@dimen/sp15</item>
        <item name="android:textColor">@color/sl_rank_rb</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/sl_rank_list_rb</item>
        <item name="android:layout_width">0.0dip</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:button">@null</item>
        <item name="android:layout_weight">1.0</item>
    </style>


    <style name="TextInputLayoutStyle">
        <item name="android:textSize">@dimen/sp14</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/main_text_color</item>
    </style>

    <style name="BottomDialog" parent="@style/Base.V7.Theme.AppCompat.Light.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">false</item>
    </style>


</resources>
