<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="bean"
            type="com.social.happychat.ui.find.bean.GankIoDataBean.ResultBean"/>
    </data>

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp250">
        <ImageView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/iv_sexyLady"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp250"
            android:defaultPicType="@{1}"
            android:displayFadeImage="@{bean.url}"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp7"
            android:layout_gravity="left|bottom"

            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp14"
                android:text="心儿"
                android:includeFontPadding="false"
                android:textColor="@color/colorPrimary"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp9"
                app:bl_corners_radius="@dimen/dp3"
                app:bl_solid_color="#EE56BA"
                android:layout_marginLeft="@dimen/dp5"
                android:paddingHorizontal="@dimen/dp3"
                android:paddingVertical="@dimen/dp1"
                android:includeFontPadding="false"
                android:text="23岁"
                android:textColor="@color/white"/>
        </LinearLayout>

        <com.social.basecommon.widget.TextImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/ic_camera"
            app:drawableLeftHeight="@dimen/dp14"
            app:drawableLeftWidth="@dimen/dp14"
            android:drawablePadding="@dimen/dp2"
            android:gravity="center_vertical"
            android:layout_gravity="right|bottom"
            android:layout_marginHorizontal="@dimen/dp7"
            android:layout_marginVertical="@dimen/dp9"
            app:bl_corners_radius="@dimen/dp10"
            app:bl_gradient_angle="90"
            app:bl_gradient_endColor="#2E27E9"
            app:bl_gradient_startColor="#9628F0"
            android:textSize="@dimen/sp10"
            android:includeFontPadding="false"
            android:paddingHorizontal="@dimen/dp3"
            android:textColor="@color/white"
            android:text="在线"
            />

        <com.social.basecommon.widget.TextImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/ic_phone"
            app:drawableLeftHeight="@dimen/dp10"
            app:drawableLeftWidth="@dimen/dp10"
            android:drawablePadding="@dimen/dp2"
            android:gravity="center_vertical"
            android:layout_gravity="right|top"
            app:bl_solid_color="#50333333"
            app:bl_corners_radius="@dimen/dp3"
            android:textSize="@dimen/sp10"
            android:includeFontPadding="false"
            android:paddingHorizontal="@dimen/dp5"
            android:paddingVertical="@dimen/dp3"
            android:textColor="@color/white"
            android:text="100%"
            />

        <com.social.basecommon.widget.TextImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/ic_queen"
            app:drawableLeftHeight="@dimen/dp14"
            app:drawableLeftWidth="@dimen/dp14"
            android:drawablePadding="@dimen/dp2"
            android:gravity="center_vertical"
            android:layout_margin="@dimen/dp7"
            app:bl_corners_radius="@dimen/dp10"
            app:bl_gradient_angle="90"
            app:bl_gradient_endColor="#CB57C4"
            app:bl_gradient_startColor="#ED4EAB"
            android:textSize="@dimen/sp12"
            android:includeFontPadding="false"
            android:paddingHorizontal="@dimen/dp5"
            android:paddingVertical="@dimen/dp2"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="女神"
            />




    </FrameLayout>



</layout>
